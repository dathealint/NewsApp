<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imvThumb"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/book_row_image_margin"
        android:layout_gravity="center_horizontal|center_vertical"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_marginRight="@dimen/book_row_image_margin"
        android:layout_marginTop="@dimen/book_row_image_margin"
        android:layout_marginBottom="@dimen/book_row_image_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:textSize="@dimen/row_title_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSection"
            android:text="Author"
            android:textSize="@dimen/row_section_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>
